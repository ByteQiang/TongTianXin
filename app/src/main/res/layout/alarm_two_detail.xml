<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_line"
        android:layout_width="4dp"
        android:layout_marginLeft="20dp"
        android:layout_height="100dp"
        android:src="@color/colorAccent"/>
      <TextView
          android:id="@+id/title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_toRightOf="@id/image_line"
          android:textStyle="bold"
          android:textSize="18sp"
          android:text="FCW-前碰撞预警"/>

    <ImageView
        android:id="@+id/image_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/time"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:src="@mipmap/source" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="45dp"
        android:text="当时车速：37km/h"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/speed"
        android:layout_marginEnd="15dp"
        android:text="2019-07-12 17:31:09"
        android:textSize="16sp" />
</RelativeLayout>